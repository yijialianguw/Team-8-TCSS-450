<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <!--image view for displaying the first letter of contact-->

    <!--text view for displaying user name-->
    <TextView
        android:id="@+id/idTVChatName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"

        android:text="Chat Name"
        android:textColor="@color/primaryDarkColor" />

    <Button
        android:id="@+id/button_open"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="25dp"
        android:text="@string/contact_link"
        android:textColor="@color/colorAccent" />
    <!--
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/text_chat_members"
    tools:visibilty="visible" />
    -->

</RelativeLayout>
